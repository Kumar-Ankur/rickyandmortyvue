{
  "name": "ricky-and-morty",
  "description": "Ricky Morty Project based on Vue JS",
  "author": "Kumar Ankur",
  "private": true,
  "homepage": "https://kumar-ankur.github.io/rickyandmortyvue/",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "jest --coverage --watch"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "gh-pages": "^2.2.0",
    "vue": "^2.0.1",
    "vue-resource": "^1.5.1",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-stage-3": "^7.8.3",
    "@testing-library/vue": "^5.0.3",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.0.1",
    "jest-vue": "^0.8.2",
    "vue-jest": "^3.0.5",
    "vue-loader": "^15.9.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!vue-awesome|vue-quill-editor)"
    ],
    "setupFiles": ["<rootDir>/env-setup.js"]
  }
}
